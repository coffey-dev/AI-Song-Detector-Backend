# ============================================
# Configuración del Backend Flask
# AI-song-detecter Backend Environment
# ============================================

# Entorno de ejecución
FLASK_ENV=development
FLASK_DEBUG=1

# Puerto del servidor
PORT=5000

# Host (0.0.0.0 permite conexiones desde la red local)
HOST=0.0.0.0

# Directorio para archivos subidos temporalmente
UPLOAD_FOLDER=./uploads

# Tamaño máximo de archivo (en bytes)
# 50 MB = 52428800 bytes
MAX_CONTENT_LENGTH=52428800

# Formatos de audio permitidos (separados por comas)
ALLOWED_EXTENSIONS=mp3,wav,ogg,m4a,flac,aac

# Configuración del modelo
MODEL_PATH=./models/detector.pkl
USE_PRETRAINED_MODEL=False

# Configuración de análisis espectral
# Frecuencia de muestreo para análisis
SAMPLE_RATE=16000

# Rango de frecuencias para detección (Hz)
# Basado en ISMIR 2025 paper
FREQ_MIN=5000
FREQ_MAX=16000

# Configuración STFT
N_FFT=16384

# Umbral de confianza mínimo para clasificación
CONFIDENCE_THRESHOLD=0.6

# CORS - Permitir peticiones desde React Native
# En producción, especifica el dominio exacto
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Limpieza automática de archivos temporales
# Tiempo en segundos antes de eliminar archivos (1 hora = 3600)
CLEANUP_INTERVAL=3600

# Modo de desarrollo - desactiva algunas validaciones
DEV_MODE=True
