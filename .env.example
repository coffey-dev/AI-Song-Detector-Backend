# ============================================
# Configuración del Backend Flask para PRODUCCIÓN
# AI-song-detector Backend Environment
# ============================================

# Entorno de ejecución
FLASK_ENV=production
FLASK_DEBUG=0

# Puerto del servidor (Railway lo asignará automáticamente)
# PORT=5000

# Host (0.0.0.0 permite conexiones desde cualquier origen)
HOST=0.0.0.0

# Directorio para archivos subidos temporalmente
UPLOAD_FOLDER=./uploads

# Tamaño máximo de archivo (en bytes)
# 50 MB = 52428800 bytes
MAX_CONTENT_LENGTH=52428800

# Formatos de audio permitidos (separados por comas)
ALLOWED_EXTENSIONS=mp3,wav,ogg,m4a,flac,aac

# Configuración del modelo
MODEL_PATH=./models/detector.pkl
USE_PRETRAINED_MODEL=False

# Configuración de análisis espectral
SAMPLE_RATE=16000
FREQ_MIN=5000
FREQ_MAX=16000
N_FFT=16384
CONFIDENCE_THRESHOLD=0.6

# CORS - Configurar con el dominio de tu app React Native en producción
# Para desarrollo: *
# Para producción: https://tu-dominio.com
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Limpieza automática de archivos temporales
CLEANUP_INTERVAL=3600

# Modo de desarrollo
DEV_MODE=False
